<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pur1"
    tools:context=".CompanyOption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/pur1"
        >

        <ImageView
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/nuslogo"
            />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="5dp"
            android:text="Hello"
            android:textSize="25dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="170dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"

            />




    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pur1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete your profile"
                        android:textColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        android:shadowDx="90"
                        android:shadowDy="0"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Here you can complete info"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <ImageButton

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/pur1"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/ic_outline_library_add_24" />



                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:id="@+id/postNewJobIDc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pur1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Post jobs"
                        android:textColor="@color/white"
                        android:outlineSpotShadowColor="@color/white"
                        android:shadowDx="90"
                        android:shadowDy="0"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Here you can post your suitable jobs"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        />

                    <ImageButton

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/pur1"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/search" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pur1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >




                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/pur1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check CV"
                        android:textColor="@color/white"
                        android:outlineSpotShadowColor="@color/black"
                        android:shadowDx="90"
                        android:shadowDy="0"
                        android:textSize="20dp"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Here you can check CV from the candidate"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        />

                    <ImageButton

                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/pur1"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/send" />



                </LinearLayout>
            </androidx.cardview.widget.CardView>




        </LinearLayout>




    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>